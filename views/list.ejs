
<%- include("header") %>
   
    <div class="box" id="heading">
        <h1> <%= NameOfDay  %> </h1>
    </div>
        
    <div class="box">
        <% for(var i =0; i < ntask.length ; i++){ %>
            <div class="item">
                <input type="checkbox" >
                
                <p> <%= ntask[i] %> </p>
            </div>
        <% } %>
        
        <form class="item" action="/" method="post">
            <input type="text" name="newitem" placeholder="Enter New Task" autocomplete="off">
            <button type="submit">+</button>
        </form>

    </div>

<%- include("footer") %>

    
